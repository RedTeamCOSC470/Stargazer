<% title "Login" %> 

<div class="block">        
  <div class="content">            
    <div class="inner">
      <% form_for @user_session, :html => { :class => :form } do |form| %>
    <h2 class="title">Login</h2>
    <div class="group">
        <%= form.label :username, "Username", :class => :label %><br />
        <%= form.text_field :username, :class => 'text_field' %><br />
      </div> 
      <br />
    <div class="group">
        <%= form.label :password, "Password", :class => :label %><br />
        <%= form.password_field :password, :class => 'text_field' %>  
      </div>
        <p>
          <%= form.submit "Submit", :class => :button %>  
        </p>  
      <% end %>  
    </div>
  </div>
</div>
