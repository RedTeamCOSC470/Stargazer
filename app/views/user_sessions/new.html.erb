<% title "Login" %>

<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'Welcome to Stargazer', :controller => :info, :action => :help %></li>
    </ul>
    <div class="clear"></div>
  </div>
  <div class="content">
    <h2 class="title">Login</h2>
    <div class="inner">
      <% form_for @user_session, :html => { :class => :form } do |form| %>
          <%= form.error_messages %>
          <div class="group">
            <%= form.label :username, "Username", :class => :label %>
            <%= form.text_field :username, :class => 'text_field' %>
          </div>
          <div class="group">
            <%= form.label :password, "Password", :class => :label %>
            <%= form.password_field :password, :class => 'text_field' %>
          </div>
          <p>
            <%= form.submit "Submit", :class => :button %>
          </p>
      <% end %>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar', :locals => { :help => "If you have trouble logging in or forgot your, please contact the administrator." }) -%>