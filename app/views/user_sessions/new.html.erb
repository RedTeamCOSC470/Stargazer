<% title "Log in" %>  
  
<% form_for @user_session do |form| %>  
<%= form.error_messages %>  
  <p>
    <%= form.label :username, "Username" %><br />  
    <%= form.text_field :username %>  
  </p>  
  <p>
    <%= form.label :password, "Password" %><br />  
    <%= form.password_field :password %>  
  </p>  
  <p>
    <%= form.submit "Submit" %>  
  </p>  
<% end %>  