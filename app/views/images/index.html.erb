<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List Schedules', schedules_path %></li>
      <li><%= link_to 'New Schedule', new_schedule_path %></li>
      <li><%= link_to 'Show Schedule', schedule_path(params[:schedule_id]) %></li>
      <li class="active"><%= link_to 'List Images', schedule_images_path(params[:schedule_id]) %></li>
      <li><%= link_to 'New Image', new_schedule_image_path(params[:schedule_id]) %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Images</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">Schedule</th>
										<th>Image File</th>
					          <th>Updated At</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @images.each do |image| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= image.schedule_id %>
          </td>
					<td>
						<%= link_to image.image_file_name, schedule_image_path(params[:schedule_id], image.id) %>
					</td>
					<td>
            <%=h image.image_updated_at %>
          </td>
          <td class="last">
            <%= link_to 'Show', schedule_image_path(params[:schedule_id], image.id) %>
            <%= link_to 'Edit', edit_schedule_image_path(params[:schedule_id], image.id) %>
              | <%= link_to 'Delete', schedule_image_path(params[:schedule_id], image.id), :confirm => 'Are you sure?', :method => :delete %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>


<% title ("Image Gallery") %> 
<% content_for :sidebar, render(:partial => 'sidebar', :locals => { :help => "Please select an action on an image." }) -%>