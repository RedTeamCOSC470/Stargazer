<% title ("Edit Image") %>

<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List Schedules', schedules_path  %></li>
      <li><%= link_to 'Show Schedule', schedule_path(params[:schedule_id]) %></li>
      <li><%= link_to 'Edit Schedule', edit_schedule_path(params[:schedule_id]) %></li>
      <li><%= link_to 'List Images', schedule_images_path(params[:schedule_id]) %></li>
      <li><%= link_to 'Show Image', schedule_image_path(params[:schedule_id], @image.id) %></li>
      <li class="active"><%= link_to 'Edit Image', edit_schedule_image_path(params[:schedule_id], @image.id) %></li>
    </ul>
    <div class="clear"></div>
  </div>
  <div class="content">
    <h2 class="title">Edit Image</h2>
    <div class="inner">
      <% form_for @image, :url => {:action => "update"}, :html => { :class => :form, :multipart => true } do |f| %>
          <%= render :partial => "form", :locals => {:f => f} %>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar', :locals => { :help => "Select an image to upload." }) -%>