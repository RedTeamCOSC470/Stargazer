
  <div class="group">
    <%= f.label :username, "Username", :class => :label %>
    <%= f.text_field :username, :class => 'text_field' %>
    <span class="description">The user's name that will be used for login purposes.</span>
  </div>

  <div class="group">
    <%= f.label :email, "Email", :class => :label %>
    <%= f.text_field :email, :class => 'text_field' %>
    <span class="description">The user's email address.</span>
  </div>

  <div class="group">
    <%= f.label :password, "Password", :class => :label %>
    <%= f.password_field :password, :class => 'text_field' %>  
    <span class="description">Please enter the user's password.</span>
  </div>

  <div class="group">
    <%= f.label :password_confirmation, "Password confirmation", :class => :label %>
    <%= f.password_field :password_confirmation, :class => 'text_field' %>  
    <span class="description">Re-enter the same password as confirmation.</span>
  </div>
  
  <% if @current_user.is_admin? %>
    <div class="group">
      <%= f.label :is_admin, "Admin", :class => :label %>
      <%= f.check_box :is_admin, :class => 'check_box' %><br /> 
      <span class="description">Is this user an admin or a regular user?</span>
    </div>
  <% end %>
        
<div class="group navform">
  <input type="submit" class="button" value="Save &rarr;" /> or <%= link_to 'Cancel', :back %>
</div>