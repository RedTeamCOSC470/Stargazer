<% title ("All Users") %> 

<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List Users', users_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Users</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
										<th>Username</th>
					          <th>Email</th>
					          <th>Last Login</th>
					          <th>Admin</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @users.each do |user| %>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= user.id %>
          </td>
					<td>
						<%= link_to user.username, user_path(user) %>
					</td>
					<td>
            <%= user.email %>
          </td>
					<td>
            <%= user.last_login_at %>
          </td>
					<td>
            <%= user.is_admin %>
          </td>
          <td class="last">
            <%= link_to 'show', user_path(user) %> |
            <%= link_to 'edit', edit_user_path(user) %> |
            <%= link_to 'delete', user_path(user), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="group navform">
        <%= link_to 'New User', new_user_path, :class => "link_button" %>
      </div>
      <div class="actions-bar">
        <div class="actions"></div>
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar', :locals => { :help => "Please select an action on a user." }) -%>