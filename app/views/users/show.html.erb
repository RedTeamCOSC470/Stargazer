<h3>User: <%=h @user.username %></h3>

<p>
  <b>ID:</b>
  <%=h @user.id %>
</p>

<p>
  <b>Username:</b>
  <%=h @user.username %>
</p>

<p>
  <b>Email:</b>
  <%=h @user.email %>
</p>

<p>
  <b>Login Count:</b>
  <%=h @user.login_count %>
</p>

<p>
  <b>Failed Login Count:</b>
  <%=h @user.failed_login_count %>
</p>

<p>
  <b>Last Request At:</b>
  <%=h @user.last_request_at %>
</p>

<p>
  <b>Current Login At:</b>
  <%=h @user.current_login_at %>
</p>

<p>
  <b>Last Login At:</b>
  <%=h @user.last_login_at %>
</p>

<p>
  <b>Current Login IP:</b>
  <%=h @user.current_login_ip %>
</p>

<p>
  <b>Last Login IP:</b>
  <%=h @user.last_login_ip %>
</p>

<p>
  <b>Created at:</b>
  <%=h @user.created_at %>
</p>

<p>
  <b>Updated at:</b>
  <%=h @user.updated_at %>
</p>

<table>
  <tr>
    <th>Start time</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Exposure</th>
    <th>Number of pictures</th>
  </tr>
  
<br />
<h3><%=h @user.username %>'s Schedules</h3>

<% @user.schedules.each do |schedule| %>
  <tr>
    <td><%=h schedule.start_time %></td>
    <td><%=h schedule.latitude %></td>
    <td><%=h schedule.longitude %></td>
    <td><%=h schedule.exposure %></td>
    <td><%=h schedule.number_of_pictures %></td>
    <td><%= link_to 'Show', schedule %></td>
    <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
    <td><%= link_to 'Delete', schedule, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

