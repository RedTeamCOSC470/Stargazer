<% title ("New Schedule") %>

<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List Schedules', schedules_path  %></li>
      <li class="active"><%= link_to 'New Schedule', new_schedule_path %></li>
    </ul>
    <div class="clear"></div>
  </div>
  <div class="content">
    <h2 class="title">New Schedule</h2>
    <div class="inner">
      <% form_for :schedule, :url => schedules_path, :html => { :class => :form } do |f| -%>
          <%= render :partial => "form", :locals => {:f => f} %>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar', :locals => { :help => "Please enter the scheduling information." }) -%>