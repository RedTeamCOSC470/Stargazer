<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List Schedules', schedules_path %></li>
      <li><%= link_to 'New Schedule', new_schedule_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Schedules</h2>
    <div class="inner">
      <% form_tag "", :class => :form, :method => :get do %>
        <%= label_tag (:date, "Select a date", :class => "label") %>
        <% #date_select (:date, "get") %>
        <%= select_tag (:date, options_for_select((1..100).to_a)) %>
        <%= submit_to_remote 'search_btn', 'Go', :url => { :action => 'index', :method => 'get' }, 
            :html => { :class => "button" } %>
      <% end %>
      <table class="table">
        <tr>             
          <th>Start Time</th>
      							<th>Right Ascension</th>
      							<th>Declination</th>
      		          <th>Pictures</th>
      		          <th>Time Limit</th>
          <th class="last">&nbsp;</th>
        </tr>
        <div id="results">
        <%= render :partial => @schedules %>
        </div>
      </table>
      <div class="group navform">
        <%= link_to 'New', new_schedule_path %>
      </div>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>


<% title ("Schedule Log") %> 
<% content_for :sidebar, render(:partial => 'sidebar', :locals => { :help => "A user may have entered a total of number of pictures to be taken or a time-limit as a duration for a task." }) -%>