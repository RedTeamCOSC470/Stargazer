<% title ("Schedule Log") %> 

<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List Schedules', schedules_path %></li>
      <li><%= link_to 'New Schedule', new_schedule_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Schedules</h2>
    <div class="inner">
      <% form_remote_tag :html => { :class => "form", :action => url_for(:controller => "schedules", :action => "index"), :method => "get"} do %>
        <%= label_tag (:date, "Select a date", :class => "label") %>
        <%= date_select (:date, "get", :default => get_default_date, :start_year => 2009, :end_year => Date.current.year+4) %>
        <%= submit_tag "Go", :class => "button" %> or 
        <%= submit_tag "View All", :class => "button" %>
      <% end %><br />
      <table class="table">
        <tr>             
          <th>Start Date</th>
          <th>Start Time</th>
					<th>Right Ascension</th>
					<th>Declination</th>
          <th>Pictures</th>
          <th>Time Limit</th>
          <th class="last">&nbsp;</th>
        </tr>
        <div id="results">
        <%= render :partial => @schedules %>
        </div>
      </table>
      <div class="group navform">
        <%= link_to 'New', hash_for_new_schedule_path.merge (:date => params[:date]), :class => "link_button" %>
      </div>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar', :locals => { :help => "A user may have entered a total of number of pictures to be taken or a time-limit as a duration for a task." }) -%>