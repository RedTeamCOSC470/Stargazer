<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List Schedules', schedules_path %></li>
      <li><%= link_to 'New Schedule', new_schedule_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Schedules</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
										<th>Date</th>
					          <th>Num of Pictures</th>
					          <th>Time Limit</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @schedules.each do |schedule| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= schedule.id %>
          </td>
					<td>
						<%= link_to schedule.start_time, schedule_path(schedule) %>
					</td>
					<td>
            <%=h schedule.number_of_pictures %>
          </td>
					<td>
            <%=h schedule.output_duration %>
          </td>
          <td class="last">
            <%= link_to 'show', schedule_path(schedule) %>
            <% if schedule.user == @current_user || @current_user.is_admin? %>
              | <%= link_to 'edit', edit_schedule_path(schedule) %>
              | <%= link_to 'delete', schedule_path(schedule), :method => :delete, :confirm => 'Are you sure?' %>
            <% end %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>


<% title ("Schedule Log") %> 
<% content_for :sidebar, render(:partial => 'sidebar', :locals => { :help => "A user may have entered a total of number of pictures to be taken or a time-limit as a duration for a task." }) -%>